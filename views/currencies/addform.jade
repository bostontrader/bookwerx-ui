extends ../layout

block content
    h1 Create a new currency

    form(method="post")
        fieldset.form-group
            label(for="symbol") Symbol:
            input.form-control(name="symbol", type="text", placeholder="Enter a symbol")
            label(for="title") Title:
            input.form-control(name="title", type="text", placeholder="Enter a title")

        button.btn.btn-primary(type="submit") Create new currency
        a.btn.btn-defualt(href="/currencies") Cancel